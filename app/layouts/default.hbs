<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Personal Dashboard</title>
    <link rel="stylesheet" type="text/css" href="/assets/css/_remake.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/main.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/nav.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/signups.css">
    <link rel="stylesheet" type="text/css" href="/assets/css/about.css">
    <!--Source for tailwindcss but doesn't work-->
    <!--<link rel="stylesheet" type="text/css" href="/assets/css/style.css">-->
</head>
<body>
  <div class="navcontainer">
    <div class="nav">
      <div class="pages">
        <a class="navbutton" href="../index">Homepage</a>
        <a class="navbutton" href="../aboutme">About Us</a>
      </div>
      {{#if currentUser}}
      <div class="user">
        <div>{{currentUser.details.username}}</div>
        <a class="navbutton" href="/user/login">Logout</a>
      </div>
      {{else}}
        <div class="user">
          <a class="navbutton" href="/user/signup">Sign up</a>
          <a class="navbutton" href="/user/login">Log in</a>
        </div>
      {{/if}}
    </div>
    {{!-- Show errors --}}
    {{#if flashErrors }}
      {{#each flashErrors }}
        <div>{{ this }}</div>
      {{/each}}
    {{/if}}
    {{!-- Show success messages --}}
    {{#if flashSuccesses }}
      {{#each flashSuccesses }}
        <div>{{ this }}</div>
      {{/each}}
    {{/if}}
    {{> yield }}
  </div>
  {{#if isPageAuthor}}
    {{!-- Prevent loading the Remake framework if the page isn't editable --}}
    <script src="/assets/js/vendor/Sortable.min.js"></script>
    <script src="/assets/js/vendor/crostini.min.js"></script>
    <script src="/remake/js/remake.min.js"></script>
    <script src="/assets/js/remake-init.js"></script>
  {{/if}}
  <script src="/assets/js/main.js"></script>
</body>
</html>